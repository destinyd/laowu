<h1>Listing resumes</h1>

<table class='table table-striped'>
  <tr>
    <th>Name</th>
    <th>Is public</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @resumes.each do |resume| %>
  <tr>
    <td><%= resume.name %></td>
    <td><%= resume.is_public %></td>
    <td><%= resume.user_id %></td>
    <td><%= link_to t('labels.show'), resume %></td>
    <td><%= link_to t('labels.edit'), edit_resume_path(resume) %></td>
    <td><%= link_to t('labels.destroy'), resume, confirm: t('labels.sure?'), method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

