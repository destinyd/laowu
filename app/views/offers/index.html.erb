<h1>Listing offers</h1>

<table class='table table-striped'>
  <tr>
    <th>Company</th>
    <th>Position</th>
    <th>User</th>
    <th>Status</th>
    <th>Salary</th>
    <th>Finished at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @offers.each do |offer| %>
  <tr>
    <td><%= offer.company_id %></td>
    <td><%= offer.position_id %></td>
    <td><%= offer.user_id %></td>
    <td><%= offer.status_id %></td>
    <td><%= offer.salary %></td>
    <td><%= offer.finished_at %></td>
    <td><%= link_to t('labels.show'), offer %></td>
    <td><%= link_to t('labels.edit'), edit_offer_path(offer) %></td>
    <td><%= link_to t('labels.destroy'), offer, confirm: t('labels.sure?'), method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

