<h1>Listing experiences</h1>

<table>
  <tr>
    <th>Salary</th>
    <th>Started at</th>
    <th>Finished at</th>
    <th>User</th>
    <th>Company</th>
    <th>Position</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @experiences.each do |experience| %>
  <tr>
    <td><%= experience.salary %></td>
    <td><%= experience.started_at %></td>
    <td><%= experience.finished_at %></td>
    <td><%= experience.user_id %></td>
    <td><%= experience.company_id %></td>
    <td><%= experience.position_id %></td>
    <td><%= link_to 'Show', experience %></td>
    <td><%= link_to 'Edit', edit_experience_path(experience) %></td>
    <td><%= link_to 'Destroy', experience, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

