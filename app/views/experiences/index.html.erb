<h1>Listing experiences</h1>

<table class='table table-striped'>
  <tr>
    <th>Salary</th>
    <th>Started at</th>
    <th>Finished at</th>
    <th>User</th>
    <th>Company</th>
    <th>Position</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @experiences.each do |experience| %>
  <tr>
    <td><%= experience.salary %></td>
    <td><%= experience.started_at %></td>
    <td><%= experience.finished_at %></td>
    <td><%= experience.user_id %></td>
    <td><%= experience.company_id %></td>
    <td><%= experience.position_id %></td>
    <td><%= link_to t('labels.show'), experience %></td>
    <td><%= link_to t('labels.edit'), edit_experience_path(experience) %></td>
    <td><%= link_to t('labels.destroy'), experience, confirm: t('labels.sure?'), method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Experience', new_experience_path %>
